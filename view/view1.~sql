CREATE OR REPLACE VIEW view1 AS
SELECT * FROM dual;

CREATE OR REPLACE VIEW vw_dog_vacc AS
SELECT d.dog_id
      ,d.dog_name
      ,d.registration_number      
      ,v.date_of_vacc
      ,vt.vacc_name
      ,'Dr.' || p.first_name || ' ' || p.last_name AS doctor_name
FROM   dog d
       JOIN vacc v
         ON d.dog_id = v.dog_id
       JOIN vacc_type vt
         ON v.vacc_type_id = vt.vacc_type_id
       JOIN person p
         ON v.doctor_id = p.person_id
WHERE  v.date_of_vacc >= DATE '2016-01-01'
ORDER BY d.dog_id, v.date_of_vacc;
/

CREATE OR REPLACE VIEW view1 AS
CREATE TABLE funkcionalitas_audit as
SELECT * FROM funkcionalitas where 1 = 2;

funkcio_id         NUMBER        NOT NULL PRIMARY KEY
,funkcio_neve      VARCHAR2(40)  NOT NULL
,ar                NUMBER        NOT NULL
,last_modified     DATE          DEFAULT SYSDATE NOT NULL
,created           DATE          DEFAULT SYSDATE NOT NULL
); 

